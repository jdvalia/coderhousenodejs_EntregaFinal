<!DOCTYPE html>

<html lang="es">

<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark w-100 px-4">
            <a class="navbar-brand" href="#"></a>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ms-auto p-12">
                    <li class="nav-item"><a class="nav-link" href="/">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" href="/chat">Chat</a></li>
                    <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                    <li class="nav-item"> <a class="nav-link" href="/infoServer">Info Servidor</a> </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Informacion del servidor -->

    <div class="container p-3 my-3 bg-light text-black">

        <h3>Información del servidor</h3>
        <!-- puerto -->
        <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">Port: </span>
            </div>
            <input class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm" value={{info.port}}
                readonly>
        </div>
        <!-- plataforma -->
        <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">Plataforma: </span>
            </div>
            <input class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm"
                value={{info.plataforma}} readonly>
        </div>
        <!-- version_node -->
        <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">Versión de Node: </span>
            </div>
            <input class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm"
                value={{info.version_node}} readonly>
        </div>
        <!-- memoria_total_reservada -->
        <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">Memoria total reservada: </span>
            </div>
            <input class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm"
                value={{info.memoria_total_reservada}} readonly>
        </div>
        <!-- path_ejecucion -->
        <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">Path Ejecución: </span>
            </div>
            <input class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm"
                value={{info.path_ejecucion}} readonly>
        </div>
        <!-- process_id -->
        <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">Process id: </span>
            </div>
            <input class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm"
                value={{info.process_id}} readonly>
        </div>
        <!-- carpeta_proyecto -->
        <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">Carpeta del Proyecto: </span>
            </div>
            <input class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm"
                value={{info.carpeta_proyecto}} readonly>
        </div>
        <!-- cantidad_cpus -->
        <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">Cantidad Cpus: </span>
            </div>
            <input class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm"
                value={{info.cantidad_cpus}} readonly>
        </div>
    </div>

</body>

</html>