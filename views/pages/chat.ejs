    <STYLE type="text/css">
        * {
            margin: 0;
            padding: 0;
        }

        html {
            font-size: 70%;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 1.6rem;
        }

        @media (min-width: 426px) {
            .main__login fieldset {
                width: 50%;
            }
        }

        @media (min-width: 1024px) {
            .main__login fieldset {
                width: 40%;
            }
        }
    </STYLE>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/mainChat.js"></script>
